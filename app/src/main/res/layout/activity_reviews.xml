<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Reviews"
android:orientation="vertical">
    <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/prg"
                 android:layout_marginTop="250dp"
                 android:layout_gravity="center"
                 android:visibility="visible"
                />
<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
android:gravity="center"
android:textColor="@color/fullblack"
android:textSize="26sp"
          android:textStyle="bold"
android:text="User Reviews"
android:layout_marginTop="20dp"
android:layout_marginBottom="20dp"/>
    <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/img"
    android:src="@drawable/listempty"
    android:visibility="gone"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
    android:gravity="center"
              android:layout_marginTop="10dp"
              android:id="@+id/noreview"
              android:textSize="16sp"
    android:text="No reviews available right now!\nCome back later"
              android:textStyle="bold"
    android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView android:layout_width="wrap_content"
                                               android:layout_height="wrap_content"
                                               android:id="@+id/rview"/>
</LinearLayout>