<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView android:layout_width="130dp"
                                       android:layout_height="290dp"
                                       app:cardBackgroundColor="@color/cardview_light_background"
                                       app:cardElevation="10dp"
                                       app:cardCornerRadius="5dp"
                                       android:layout_margin="5dp">


    <ImageView android:layout_width="140dp" android:layout_height="200dp"
               android:id="@+id/img"
               android:layout_marginLeft="-5dp"
               />
    <TextView android:layout_width="130dp" android:layout_height="wrap_content"
              android:id="@+id/nametv"
              android:textSize="16sp"
              android:textStyle="bold"
              android:gravity="center"
              android:layout_marginTop="200dp"
    />
    <TextView android:layout_width="130dp" android:layout_height="wrap_content"
              android:id="@+id/charactertv"
              android:textSize="14sp"
    android:gravity="center"
              android:layout_marginTop="245dp"
    />
    </androidx.cardview.widget.CardView>
</LinearLayout>